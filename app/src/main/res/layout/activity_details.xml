<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.juborajsarker.smsschedulerpro.activity.DetailsActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:background="#f5f5f5">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#dc383434"
                        android:textSize="16sp"
                        android:text="Message"
                        android:gravity="center"
                        android:padding="5dp"
                        android:background="#ECEFF1"/>


                    <TextView
                        android:id="@+id/details_message_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Message will display here"
                        android:gravity="left"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#dc383434"
                        android:textSize="16sp"
                        android:text="Phone"
                        android:gravity="center"
                        android:padding="5dp"
                        android:background="#ECEFF1"/>


                    <TextView
                        android:id="@+id/details_phone_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+8801938365335"
                        android:gravity="left"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp" />


                </LinearLayout>

            </android.support.v7.widget.CardView>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#dc383434"
                            android:textSize="16sp"
                            android:text="Date"
                            android:gravity="center"
                            android:padding="5dp"
                            android:background="#ECEFF1"/>


                        <TextView
                            android:id="@+id/details_date_TV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="06, february 2018"
                            android:gravity="center"
                            android:padding="8dp"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#dc383434"
                            android:textSize="16sp"
                            android:text="Time"
                            android:gravity="center"
                            android:padding="5dp"
                            android:background="#ECEFF1"/>


                        <TextView
                            android:id="@+id/details_time_TV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="07:30 pm"
                            android:gravity="center"
                            android:padding="8dp"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#dc383434"
                            android:textSize="16sp"
                            android:text="Status"
                            android:gravity="center"
                            android:padding="5dp"
                            android:background="#ECEFF1"/>


                        <TextView
                            android:id="@+id/details_status_TV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PENDING"
                            android:gravity="center"
                            android:padding="8dp" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/editBTN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="EDIT"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="#fff"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/deleteBTN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="DELETE"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="#fff"
                    android:layout_margin="5dp"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>




</LinearLayout>
